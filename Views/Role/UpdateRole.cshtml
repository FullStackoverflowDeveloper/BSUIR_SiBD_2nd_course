@model DrivingSchool.MethodModels.RoleChanger

<h4>Change users at role @Model.RoleName</h4>

@*Форма для отправки данных на метод контроллера*@
<form asp-action="UpdatePost" asp-controller="Role" method="post">
    <input type="hidden" name="roleId" value="@Model.RoleId" />
    <div class="form-group">
        @foreach (DrivingSchool.Models.User user in Model.UsersAll)
        {
            <input type="checkbox" name="users" value="@user.Id"
                   @(Model.UsersInRole.Contains(user) ? "checked=\"checked\"" : "") /> @user.UserName <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>