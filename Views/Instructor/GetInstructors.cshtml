@model IEnumerable<Instructor>;
@{
    ViewData["Title"] = "Instructors";
}


<h4 class="text-black text-center">INSTRUCTORS</h4>
<br />
<br />

@using (Html.BeginForm("MethodSwitcher", "Instructor", FormMethod.Post))
{
    <div class="container">
        <div class="row align-items-center" align="center">
            <div class="col">
                <input type="submit" value="Create" class="btn btn-sm btn-success" name="button" />
            </div>
            <div class="col">
                <input type="submit" value="Delete" class="btn btn-sm btn-warning" name="button" />
            </div>
        </div>
    </div>

    <br />

    <div class="container">
        <table class="table table-sm table-bordered">
            <tr>
                <th>
                    <div class="form-check">
                        <input type="checkbox" id="checkAll" class="cb-element" />
                    </div>
                </th>
                <th>Паспорт</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Фамилия</th>
                <th>Адрес</th>
                <th>Действие</th>
            </tr>
            @foreach (Instructor instructor in Model)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" name="IDs" value="@instructor.ID" class="cb-element" />
                        </div>
                    </td>
                    <td>@Html.Raw(@instructor.Passport)</td>
                    <td>@Html.Raw(@instructor.FName)</td>
                    <td>@Html.Raw(@instructor.MName)</td>
                    <td>@Html.Raw(@instructor.LName)</td>
                    <td>@Html.Raw(@instructor.Address)</td>
                    <td><input type="submit" class="btn btn-sm btn-primary" value="Update" asp-action="Update" asp-controller="Instructor" asp-route-ID="@instructor.ID" /></td>
                </tr>
            }
        </table>
    </div>

}

<script src="~/js/jquery/jquery.js"></script>
<script src="~/js/Checkbox.js"></script>