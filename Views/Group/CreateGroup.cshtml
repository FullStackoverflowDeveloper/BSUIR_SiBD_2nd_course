@model DrivingSchool.Context.AppDbContext;
@{
    ViewData["Title"] = "Groups";
}

<div class="container">
    <h3>Add group</h3>
    <div class="form-group">
        <input type="text" id="Title" class="form-control" placeholder="Номер группы" />
    </div>
    <div class="form-group">
        <select id="InstructorID" class="form-control">
            @foreach (var item in Model.Instructors.ToList())
            {
                <option value="@item.ID">@item.FName @item.MName @item.LName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-outline-success" id="dataSend">Add group</button>
    </div>
</div>

<script src="~/js/jquery/jquery.js"></script>
<script src="~/Views/Group/CreateGroup.js"></script>