@model DrivingSchool.MethodModels.GroupAction
@{
    ViewData["Title"] = "Groups";
    Group group = Model.db.Groups.Find(Model.ID);
}

<div class="container">
    <h3>Update group</h3>

    <div class="form-group">
        <label>Номер группы</label>
        <input class="form-control" placeholder="Номер группы" asp-for="@group.Title" id="Title" />
    </div>
    <div class="form-group">
        <select id="InstructorID" class="form-control" asp-for="@group.InstructorID">
            @foreach (var item in Model.db.Instructors.ToList())
            {
                <option value="@item.ID" >@item.FName @item.MName @item.LName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-outline-success" id="dataSend">Update info</button>
    </div>
</div>

<input type="hidden" id="ID" value="@Model.ID" />

<script src="~/js/jquery/jquery.js"></script>
<script src="~/Views/Group/UpdateGroup.js"></script>