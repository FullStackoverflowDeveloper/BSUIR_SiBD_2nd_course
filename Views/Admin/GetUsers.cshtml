@model IEnumerable<DrivingSchool.Models.User>
@{
    ViewData["Title"] = "Пользователи";
}


<h3 class="text-black text-center">USERS</h3>
<br />
<br />

@*Директива, используемая в обработке нажатых кнопок ввнутри фигурных скобок*@
@using (Html.BeginForm("MethodSwitcher", "Admin", FormMethod.Post))
{
    <div class="container">
        <div class="row align-items-center" align="center">
            <div class="col">
                <input type="submit" value="Block" class="btn btn-sm btn-danger" name="button" />
            </div>
            <div class="col">
                <input type="submit" value="Unblock" class="btn btn-sm btn-success" name="button" />
            </div>
            <div class="col">
                <input type="submit" value="Delete" class="btn btn-sm btn-warning" name="button" />
            </div>
        </div>
    </div>

    <br />

    <div class="container">
        <table class="table table-sm table-bordered">
            <tr>
                <th>
                    <div class="form-check">
                        <input type="checkbox" id="checkAll" class="cb-element" />
                    </div>
                </th>
                <th>Name</th>
                <th>Sign up date</th>
                <th>Last Log in date</th>
            </tr>
            @foreach (DrivingSchool.Models.User user in Model)
            {
                <tr>
                    <td>
                        <div class="form-check">
                            <input type="checkbox" name="IDs" value="@user.Id" class="cb-element" />
                        </div>
                    </td>
                    <td>@Html.Raw(@user.UserName)</td>
                    <td>@Html.Raw(@user.RegistrationDate)</td>
                    <td>@Html.Raw(@user.LatestLoginDate)</td>
                </tr>
            }
        </table>
    </div>
}

<script src="~/js/jquery/jquery.js"></script>
<script src="~/js/Checkbox.js"></script>